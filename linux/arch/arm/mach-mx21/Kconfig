menu "MX21 Options"
	depends on ARCH_MX21

config MX21_OPTIONS
	bool
	default y
	select CPU_ARM926T
	select MXC_EMMA

config MACH_MX21ADS
	bool "Support MX21 ADS platforms"
	default y
	help
	  Include support for MX21 ADS platform. This includes specific
	  configurations for the board and its peripherals.

endmenu
